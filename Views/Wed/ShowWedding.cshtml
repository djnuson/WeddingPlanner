@using WeddingPlanner.Models
@model WeddingModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/js/site.js"></script>
    <link rel="stylesheet" href="~/css/dashboard.css">
    <title>@ViewBag.Title
        @{
            ViewBag.Title = "Wedding Details";
        }
    </title>
    <style>
    *{
        outline: 0px solid red;
    }
    h1, .guests, .map {
        display: inline-block;
    }
    #dash {
        margin-left: 140px;
        margin-right: 20px;
    }
    .guests, .map {
        margin-top: 20px;
        vertical-align: top;
    }
    .map {
        margin-left: 400px;
    }
</style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1 style="text-align: center;">Welcome to: <strong style="color:red;">@ViewBag.show.WedderOne & @ViewBag.show.WedderTwo</strong>'s Wedding!</h1>        
            <a style="btn btn-primary" href="/dashboard" id="dash">Dashboard</a>
            <a style="btn btn-danger" href="/edit/@Model.WedId">Edit Wedding</a><br><br>
            <a style="btn btn-danger" href="/logout">Logout</a><br><br>
            <h3>Date: @ViewBag.show.Date.ToString("MM dd yyyy")</h3>
        </div>
        <hr>
        <div class="guests">
            <h4>Guests:</h4>
            @{
                <ul>
                    @foreach (var g in @ViewBag.show.guest)
                    {
                        <li style="color: red;">@g.User.FirstName @g.User.LastName</li>
                    }
                </ul>
            }
        </div>

        <div class="map">           
            <iframe width="400" height="350" frameborder="0" style="border:3px solid red;"
            src="https://www.google.com/maps/embed/v1/place?q=@ViewBag.show.Address&key=AIzaSyDT36rboBufQygJFmroosbF4vadyULB2jU" allowfullscreen></iframe>
        </div>
    </div>
</body>
</html>